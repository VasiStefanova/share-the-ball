{
    "parserOptions": {
        "ecmaVersion": 2020,
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "plugins": [
        "react"
    ],
    "extends": [
        "standard-jsx",
        "google"
    ],
    "rules": {
        // overrides
        "new-cap": 0,
        "require-jsdoc": 0,
        "linebreak-style" : 0,
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "max-len": [
            "error",
            {
                "code": 180
            }
        ],
        "func-style": "off",
        "semi": 2,
        "no-undef": 2,
        "no-use-before-define": 0,
        "quotes": 2,
        "indent": [
            "error",
            2
        ],
        "arrow-parens": 0,
        "padded-blocks": 0,
        "no-empty": 2,
        "no-irregular-whitespace": 2,
        "valid-jsdoc": 2,
        "valid-typeof": 2,
        ////////// Best Practices //////////
        "prefer-const": 2,
        "consistent-return": 2,
        "eqeqeq": 2,
        "no-redeclare": 2,
        ////////// Variables //////////
        "no-shadow": 2,
        "no-shadow-restricted-names": 2,
        "no-unused-vars": [
            "warn",
            {
                "varsIgnorePattern": "_"
            }
        ],
        "react/no-did-update-set-state": "error",
        "react/no-unknown-property": "error",
        "react/no-unused-prop-types": "error",
        "react/prop-types": "error",
        "comma-dangle": "off",
        "jsx-quotes": "off",
        "eol-last": "warn"
    },
    "env": {
        "browser": true
    }
}
